{% set certbot_redirect_domains = certbot_redirect_domains |default(certbot_domains) -%}
server {
    listen       *:80;
    server_name  {{ certbot_domains |join(" ") }};

    location /.well-known/ {
        root {{ certbot_well_known_root }};
    }

    location / {
        return 301 https://$host$request_uri;
    }
}
