upstream grafana_app {
    server localhost:3000;
}

upstream influxdb_app {
    server 127.0.0.1:8086;
}

server {
    listen *:443 ssl;
    server_name infrastats.galaxyproject.org;

    access_log  /var/log/nginx/infrastats.galaxyproject.org_access.log;
    error_log   /var/log/nginx/infrastats.galaxyproject.org_error.log;

    location /.well-known/ {
        root {{ certbot_well_known_root }};
    }

    location / {
        proxy_pass   http://grafana_app;
        proxy_set_header   X-Forwarded-Host $host;
        proxy_set_header   X-Forwarded-For  $proxy_add_x_forwarded_for;
    }

}

server {
    listen {{ ansible_default_ipv4.address }}:8086 ssl;
    server_name infrastats.galaxyproject.org;

    access_log  /var/log/nginx/infrastats-influxdb.galaxyproject.org_access.log;
    error_log   /var/log/nginx/infrastats-influxdb.galaxyproject.org_error.log;

    location / {
        proxy_pass   http://influxdb_app;
        proxy_set_header   X-Forwarded-Host $host;
        proxy_set_header   X-Forwarded-For  $proxy_add_x_forwarded_for;
    }

}

